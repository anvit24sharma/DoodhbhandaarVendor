<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7FD"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:id="@+id/ll_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_ll"
        android:padding="8dp"
        android:gravity="center"
        android:layout_gravity="center"

        >

        <LinearLayout
            android:id="@+id/cv_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="@drawable/bg_ll"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"

                android:background="#ffffff"
                android:gravity="center"
                android:text="Enter Details"
                android:textColor="#5dade2"
                android:textSize="26dp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/ll_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/cv_ll"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/mobile"
                    android:padding="2dp"/>

                <EditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparentWhite"
                    android:hint="Mobile Number(10 digits)"
                    android:maxLines="1"
                    android:padding="6dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_registered_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/ll_email"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/email"
                    android:padding="4dp"/>

                <EditText
                    android:id="@+id/et_registered_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparentWhite"
                    android:hint="Registered Email"
                    android:maxLines="1"
                    android:padding="6dp"
                    android:textSize="18sp" />


            </LinearLayout>



            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/ll_email"
                android:layout_marginStart="65dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/my_btn"
                android:gravity="center"
                android:padding="8dp"
                android:text="Next"
                android:textColor="#ffffff"
                android:textSize="18sp">

            </Button>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>