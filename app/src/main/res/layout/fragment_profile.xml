<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.fragments.ProfileFragment">


    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pro_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/male" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="User Name"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Mobile No"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Address"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="email Id"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/edit" />

    </LinearLayout>

<ImageView
    android:id="@+id/img_abtUs"
    android:layout_width="25dp"
    android:layout_height="25dp"
    app:layout_constraintTop_toBottomOf="@id/ll_detail"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="30dp"
    android:layout_marginStart="8dp"
    android:src="@drawable/aboutus"
    />

        <TextView
            android:id="@+id/txt_abtUs"
            app:layout_constraintTop_toBottomOf="@id/ll_detail"
            app:layout_constraintStart_toEndOf="@id/img_abtUs"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:text="About Us"
            android:textColor="#000"
            android:textSize="16sp" />



    <ImageView
        android:id="@+id/img_contactUs"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_abtUs"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"

        android:src="@drawable/contactus"
        />

    <TextView
        android:id="@+id/txt_contactUs"
        app:layout_constraintTop_toBottomOf="@id/txt_abtUs"
        app:layout_constraintStart_toEndOf="@id/img_contactUs"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="Contact Us"
        android:textColor="#000"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/img_tc"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_contactUs"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"

        android:src="@drawable/termandcond"
        />

    <TextView
        android:id="@+id/txt_tc"
        app:layout_constraintTop_toBottomOf="@id/txt_contactUs"
        app:layout_constraintStart_toEndOf="@id/img_tc"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="Term and Conditions"
        android:textColor="#000"
        android:textSize="16sp" />



    <ImageView
        android:id="@+id/img_logOut"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/lg"
        />

    <TextView
        android:id="@+id/txt_logOut"
        app:layout_constraintTop_toBottomOf="@id/txt_tc"
        app:layout_constraintStart_toEndOf="@id/img_logOut"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="Log out"
        android:textColor="#000"
        android:textSize="16sp" />


</androidx.constraintlayout.widget.ConstraintLayout>