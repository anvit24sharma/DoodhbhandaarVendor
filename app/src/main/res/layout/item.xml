<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7FD"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="6dp"
        android:background="@drawable/bgwhite_box"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="6dp"
            android:src="@drawable/db" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:text="Product Name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_productDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Product Details"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/tv_PricePerKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.200/kg"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_btn_add"
                android:padding="8dp"
                android:text="Add"
                android:textColor="#5dade2"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>