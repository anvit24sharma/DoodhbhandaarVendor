<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_margin="4dp"
    android:elevation="2dp">
    <ImageView
        android:id="@+id/circle_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/circle"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/btn_google"
/>


    <TextView
        android:id="@+id/tv_product_name"
        app:layout_constraintStart_toEndOf="@id/circle_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="2dp"
        android:text="Product Name"
        android:background="#ffffff"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
       />
    <TextView
        android:id="@+id/tv_product_cost"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Amount:Rs.%s"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_variants"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/item_variants"
        app:layout_constraintTop_toBottomOf="@id/circle_img"/>





</androidx.constraintlayout.widget.ConstraintLayout>

