<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_calender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:padding="6dp"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llDate1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/calender_box"
            android:elevation="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/tvMonth1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Month" />

            <TextView
                android:id="@+id/tvDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/calender_box"
            android:elevation="4dp"
            android:orientation="vertical"
         >

            <TextView
                android:id="@+id/tvMonth2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Month" />

            <TextView
                android:id="@+id/tvDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/calender_box"
            android:elevation="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/tvMonth3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Month" />

            <TextView
                android:id="@+id/tvDate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="3" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/calender_box"
            android:elevation="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvMonth4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Month" />

            <TextView
                android:id="@+id/tvDate4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="4" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/calender_box"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/tvMonth5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Month" />

            <TextView
                android:id="@+id/tvDate5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="5" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/calender_box"
            android:elevation="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/tvMonth6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Month" />

            <TextView
                android:id="@+id/tvDate6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="6" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/calender_box"
            android:elevation="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
          >

            <TextView
                android:id="@+id/tvMonth7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Month" />

            <TextView
                android:id="@+id/tvDate7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="7" />


        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_placed_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/et_special_instruction"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_place_order"
        tools:itemCount="2" />


    <LinearLayout
        android:id="@+id/to_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@id/ll_payment_option">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="#fff"
            android:padding="2dp"
            android:text="To Pay"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/tv_totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="#fff"
            android:gravity="end"
            android:padding="2dp"
            android:text="Rs.%s"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintBottom_toTopOf="@id/ll_delivery_address"
        android:id="@+id/ll_payment_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_delivery_address"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="#fff"
            android:padding="4dp"
            android:text="Payment Mode"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="4dp"
            >

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Cash" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Online" />
        </RadioGroup>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/ll_payment_option"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:background="#E8E8E8" />

    <LinearLayout
        app:layout_constraintBottom_toTopOf="@id/btn_place_order"
        android:id="@+id/ll_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_place_order"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="2dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:src="@drawable/location" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="#fff"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#fff"
                android:text="Deliver to"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#fff"
                android:text="Delivery Address"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="#fff"
            android:gravity="end"
            android:padding="4dp"
            android:text="Change"
            android:textAllCaps="true"
            android:textColor="#f57083"
            android:textSize="13sp"
             />


    </LinearLayout>


    <EditText
        android:id="@+id/et_special_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/to_pay"
        android:hint="Add special instructions"
        android:gravity="center"
        android:background="#ffffff"
        android:textSize="14sp"
        android:minLines="2"
        android:layout_marginBottom="15dp"
        android:textColor="#000"/>

    <Button
        android:id="@+id/btn_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        android:text="@string/place_order"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>