<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the Quantity"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"/>

    <RelativeLayout
        android:id="@+id/half_kg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        >

        <ImageView
            android:id="@+id/radio_btn_half_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_btn"
            android:tint="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/half_kg_tv"
            android:layout_toRightOf="@+id/radio_btn_half_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Half kg"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/half_kg_tv"
            android:gravity="end"
            android:layout_marginEnd="10dp">
        <ImageButton

            android:id="@+id/half_kg_remove"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/half_kg_tv"
            android:src="@drawable/remove"
            android:background="@drawable/add_remove_btn"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/half_kg_quantity"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:text="0.5"
            android:layout_toRightOf="@+id/half_kg_remove"
            android:background="@drawable/add_remove_btn"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/half_kg_add"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/half_kg_quantity"
            android:src="@drawable/add"
            android:background="@drawable/add_remove_btn"
            android:textSize="14sp"/>
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/one_kg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="4dp"
        >

        <ImageView
            android:id="@+id/radio_btn_one_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_btn"
            android:tint="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/one_kg_tv"
            android:layout_toRightOf="@+id/radio_btn_one_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One kg"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/one_kg_tv"
            android:gravity="end"
            android:layout_marginEnd="10dp">
        <ImageButton

            android:id="@+id/one_kg_remove"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/one_kg_tv"
            android:src="@drawable/remove"
            android:background="@drawable/add_remove_btn"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/one_kg_quantity"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:text="1"
            android:layout_toRightOf="@+id/one_kg_remove"
            android:background="@drawable/add_remove_btn"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/one_kg_add"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/one_kg_quantity"
            android:src="@drawable/add"
            android:background="@drawable/add_remove_btn"
            android:textSize="14sp"/>
        </LinearLayout>




        <Button
            android:id="@+id/btn_place_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/my_btn"
            android:text="Place Order"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>




</LinearLayout>