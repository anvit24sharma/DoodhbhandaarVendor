<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7FD"
    tools:context=".auth.UserDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F8F7FD"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#F8F7FD"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="8dp"
            android:src="@drawable/db" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="#F8F7FD"
            android:gravity="center"
            android:padding="20dp"
            android:text="Enter Details"
            android:textSize="24sp"
            android:textColor="#5dade2"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#ffffff"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/profile" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:hint="Name"
                android:maxLines="1"
                android:padding="6dp"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#ffffff"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:hint="Email"
                android:maxLines="1"
                android:padding="6dp"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#ffffff"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/mobile" />

            <EditText
                android:id="@+id/et_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:hint="Mobile Number"
                android:maxLines="1"
                android:padding="6dp"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_delivery_address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#ffffff"
            android:elevation="5dp"
            android:layout_marginTop="10dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/location" />

            <EditText
                android:id="@+id/et_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:hint="Address"
                android:maxLines="1"
                android:padding="6dp"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>





        <Button
            android:id="@+id/btn_Save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/my_btn"
            android:gravity="center"
            android:padding="8dp"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="18sp">

        </Button>





    </LinearLayout>

</LinearLayout>
