<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#ffffff"
    android:elevation="4dp"
    android:padding="5dp"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/txt_orderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ORDER NO:"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txt_orderNo"
        android:text="ORDER NO"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_orderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_below="@id/tv_totalPrice"
        android:layout_toRightOf="@+id/bracket2"
        android:gravity="end"
        android:text="Order Details"
        android:textColor="#8000a4"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_orderNo"
        android:padding="4dp"
        android:text="Order Date"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:textStyle="italic" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/orderDate"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#b1b1b1" />

    <TextView
        android:id="@+id/tv_billAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:padding="4dp"
        android:text="Bill Amount:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_totalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/tv_billAmount"
        android:padding="4dp"
        android:text="Rs.%s"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_productStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_billAmount"
        android:layout_marginEnd="5dp"
        android:padding="4dp"
        android:text="Status"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bracket1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_totalPrice"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/tv_productStatus"
        android:text="("
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_productStatusDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_totalPrice"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:layout_toRightOf="@id/bracket1"
        android:text="Date"
        android:textSize="13sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/bracket2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_totalPrice"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/tv_productStatusDate"
        android:text=")"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>
