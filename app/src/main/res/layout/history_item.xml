<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/ll_orderNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F8F7FD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_orderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:text="ORDER NO:"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/orderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:text="ORDER NO:"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>



        <TextView
            android:layout_below="@id/ll_orderNo"
            android:id="@+id/orderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:padding="4dp"
            android:text="Order Date"
            android:textColor="#ff7d18"
            android:textSize="16sp"
            android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderDate">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/history_single_view" />
    </FrameLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="#000"/>
    <TextView
        android:id="@+id/tv_totalPrice"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bill Amount:Rs.%s"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:padding="6dp"/>
    <TextView
        android:id="@+id/tv_productStatus"
        android:layout_below="@id/tv_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:text="Status"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="6dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/bracket1"
        android:layout_below="@id/tv_totalPrice"
        android:layout_toRightOf="@id/tv_productStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="("
        android:textSize="18sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_productStatusDate"
        android:layout_toRightOf="@id/bracket1"
        android:layout_below="@id/tv_totalPrice"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/bracket2"
        android:layout_below="@id/tv_totalPrice"

        android:layout_toRightOf="@id/tv_productStatusDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=")"
        android:textSize="18sp"
        android:textStyle="bold"/>
</RelativeLayout>