<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="190dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
   >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:fontFamily="@font/clarikagrotesquemedium"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_product_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity_s"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/soleilight"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"/>
    <TextView
        android:id="@+id/tv_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/regular"
        android:text="@string/rs_s"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name" />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_totalPrice"/>

    <TextView
        android:id="@+id/txt_cost_perDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nova"
        android:padding="2dp"
        android:text="Cost per day:"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_cost_perDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"

        android:fontFamily="@font/nova"
        android:padding="2dp"
        android:text="total amount"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/txt_cost_perDay"
        app:layout_constraintTop_toBottomOf="@id/view1"/>

    <TextView
        android:id="@+id/txt_estimated_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nova"
        android:padding="2dp"
        android:text="Estimated cost:"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txt_cost_perDay"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView

        android:id="@+id/tv_estimatedCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nova"
        android:padding="2dp"
        android:text="total amount"
        android:layout_marginTop="6dp"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/txt_estimated_cost"
        app:layout_constraintTop_toBottomOf="@id/tv_cost_perDay"/>

    <TextView
        android:id="@+id/txt_selected_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nova"
        android:padding="2dp"
        android:text="Selected plan:"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txt_estimated_cost"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView

        android:id="@+id/tv_selectedPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nova"
        android:padding="2dp"
        android:gravity="center"
        android:text="total amount"
        android:layout_marginTop="6dp"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/txt_selected_plan"
       app:layout_constraintTop_toBottomOf="@id/tv_estimatedCost"/>
    <TextView

        android:id="@+id/tv_applyPromoCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nova"
        android:padding="2dp"
        android:gravity="center"
        android:text="Apply Promo"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:textColor="#FF0000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selectedPlan"/>
    <TextView

        android:id="@+id/txt_payment_collectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nova"
        android:gravity="center"
        android:text="Payment collection date:"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_applyPromoCode"/>
    <TextView

        android:id="@+id/tv_payment_collectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nova"
        android:gravity="center"
        android:text="Payment collection date"
        android:layout_marginTop="6dp"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/txt_payment_collectionDate"
        app:layout_constraintTop_toBottomOf="@id/tv_applyPromoCode"/>

    <Button
        android:id="@+id/btn_choose"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:text="choose"
        android:gravity="center"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@drawable/selected_plan_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_applyPromoCode"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
